<Page
    x:Class="ManagerApp.View.BookingSchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ManagerApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ManagerApp.ViewModel" d:DataContext="{d:DesignInstance Type=vm:BookingScheduleViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <TextBlock Text="Booking Schedule" FontWeight="SemiBold" FontSize="40" Padding="30"/>
        <StackPanel x:Name="BookCommandStackPanel"
                        Grid.Row="0" Grid.Column="1"
                        Orientation="Horizontal" Height="50" 
                        RelativePanel.AlignRightWithPanel="True"
                    HorizontalAlignment="Right">
            <AppBarButton x:Name="addButton" Icon="Add" Label="Add" Command="{Binding AddCommand}"/>
            <!--<AppBarButton x:Name="viewButton" Icon="ZoomIn" Label="View" Command="{Binding ViewCommand}"/>-->
        </StackPanel>

        <CalendarView
            CalendarViewDayItemChanging="CalendarView_CalendarViewDayItemChanging"
            SelectionMode="Single"
            IsGroupLabelVisible="True"
            IsOutOfScopeEnabled="True"
            Language="en"
            CalendarIdentifier="GregorianCalendar" 
            Margin="10"
            Grid.Row="1"/>

        <!--Display list of customers on that day-->
        
        <ListView Grid.Row="1" Grid.Column="1"
                  x:Name="dataListView" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Margin="10,50,0,0"
                  ItemsSource="{Binding DisplayCustomerList, Mode=TwoWay}"
                  SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="200" Height="100">
                        <TextBlock TextWrapping="WrapWholeWords" >
                                Selected Date: <Run Text="{Binding Date}" FontWeight="Bold" Foreground="Blue"/>
                        </TextBlock>
                        <TextBlock TextWrapping="WrapWholeWords" >
                                Customer's phone no. : <Run Text="{Binding CustomerPhone}" FontWeight="Bold" Foreground="CadetBlue"/>
                        </TextBlock>
                        
                        <!--TODO: The rest in detail-->
                        <TextBlock TextWrapping="WrapWholeWords" >
                                Transport: <Run Text="{Binding Transport}" FontWeight="Bold" Foreground="CadetBlue"/>
                        </TextBlock>
                        
                        <!--TODO: Map icon-->
                        <TextBlock TextWrapping="WrapWholeWords" >
                                Pickup location: <Run Text="{Binding PickupLocation}" FontWeight="Bold" Foreground="CadetBlue"/>
                        </TextBlock>
                        <!--<AppBarButton x:Name="startLocationButton" Icon="MapPin" Label="Edit" Command="{Binding StartCommand}"/>-->
                        <AppBarButton x:Name="startLocationButton" Label="Edit" Command="{Binding StartCommand}">
                            &#xE819;
                        </AppBarButton>


                        <TextBlock TextWrapping="WrapWholeWords" >
                                Destination: <Run Text="{Binding Destination}" FontWeight="Bold" Foreground="CadetBlue"/>
                        </TextBlock>
                        <!--<AppBarButton x:Name="destinationButton" Icon="MapPin" Label="Edit" Command="{Binding EndCommand}"/>-->
                        <AppBarButton x:Name="destinationButton" Label="Edit" Command="{Binding EndCommand}">
                            &#xE81A;
                        </AppBarButton>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.Resources>
                <CommandBarFlyout Placement="Right" x:Name="CommandBarFlyout1">
                    <AppBarButton x:Name="viewButton" Icon="ZoomIn" Label="View" Command="{Binding ViewCommand}"/>
                    <!--TODO: update, delete only for VIP (put these in detail page?)-->
                    <AppBarButton x:Name="updateButton" Icon="Edit" Label="Update" Command="{Binding EditCommand}"/>
                    <AppBarButton x:Name="deleteButton" Icon="Delete" Label="Delete" Command="{Binding DeleteCommand}"/>
                </CommandBarFlyout>
            </ListView.Resources>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                           MaximumRowsOrColumns="1"
                           Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        
    </Grid>
</Page>
